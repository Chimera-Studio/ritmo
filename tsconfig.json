{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    // mirror babel.config.js
    "baseUrl": "./app",
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@locales": [
        "locales/index.ts"
      ],
      "@locales/*": [
        "locales/*"
      ],
      "@store": [
        "store/index.ts"
      ],
      "@store/*": [
        "store/*"
      ],
      "@styles": [
        "styles/index.ts"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@types": [
        "types/index.ts"
      ],
      "@types/*": [
        "types/*"
      ],
      "@utils": [
        "utils/index.ts"
      ],
      "@utils/*": [
        "utils/*"
      ],
    }
  },
  "include": [
    "app",
    "__tests__",
    "__mocks__",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "jest.setup.js",
    "react-native.config.js",
    "index.js",
  ],
}